/* pages/home/home.wxss */
.container {
  width: 100%;
  height: auto;
}

.bg {
  width: 100%;
  height: 300rpx;
  position: relative;
  background: #56abbe;
  color: white;
  font-family: '楷体';
}

.month_bill {
  width: 100%;
  height: auto;
  font-size: 40rpx;
  position: absolute;
  left: 0rpx;
  top: 80rpx;
  display: flex;
  justify-content: space-around;
}

.bill_list {
  width: 98%;
  height: auto;
  margin: 20rpx auto;
}

.list_time {
  width: 100%;
  height: auto;
  font-size: 30rpx;
  color: #6c6c6c;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.list_content {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0 30rpx 0;
  color: #444;
  font-size: 28rpx;

}

.cata {
  width: 50%;
  height: auto;
  /* border: 1px solid red; */
}



.cata_logo {
  width: 32rpx;
  height: 32rpx;
  vertical-align: bottom;
  margin-right: 20rpx;
}