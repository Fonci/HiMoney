}

.avatar_box {
  width: 100%;
  height: 350rpx;
  background-color: #56abbe;
  text-align: center;
  overflow: hidden;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 50rpx;
}

